@model IEnumerable<ToysDB.Models.Сотрудники>

@{
    ViewData["Title"] = "Index";
}

<h1>Таблица сотрудники</h1>

<p>
     <a asp-action="Create" class = "btn btn-outline-primary">Создать новую запись</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Фио)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Оклад)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Адрес)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Телефон)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Должность)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Фио)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Оклад)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Адрес)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Телефон)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ДолжностьNavigation.Должность)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id">Измениить</a> |
                <a asp-action="Details" class="btn btn-outline-warning" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
