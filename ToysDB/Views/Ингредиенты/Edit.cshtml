@model ToysDB.Models.Ингредиенты

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Ингредиенты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Продукция" class="control-label"></label>
                <select asp-for="Продукция" class="form-control" asp-items="ViewBag.Продукция"></select>
                <span asp-validation-for="Продукция" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сырье" class="control-label"></label>
                <select asp-for="Сырье" class="form-control" asp-items="ViewBag.Сырье"></select>
                <span asp-validation-for="Сырье" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Количество" class="control-label"></label>
                <input asp-for="Количество" class="form-control" />
                <span asp-validation-for="Количество" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
  <a asp-action="Index" class = "btn btn-outline-primary" >Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
