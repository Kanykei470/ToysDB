@model IEnumerable<ToysDB.Models.Сырьё>

@{
    ViewData["Title"] = "Index";
}

<h1>Таблица Сырья</h1>

<p>
    <a asp-action="Create" class = "btn btn-outline-primary">Создать новую запись</a>
    
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Наименование)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сумма)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Количество)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ЕдиницаИзмерения)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Наименование)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Сумма)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Количество)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ЕдиницаИзмеренияNavigation.Наименование)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id">Измениить</a> |
                <a asp-action="Details" class="btn btn-outline-warning" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
